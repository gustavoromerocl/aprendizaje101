<div class="small-container center-block center-align">
  <div>
    <h2>Olvidaste tu contraseña?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field margin-top">
        <%= f.label "Correo electrónico" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions margin-top center-align-field">
        <%= f.submit "Enviar las instrucciones para reestablecer" %>
      </div>
    <% end %>
    <div class="actions margin-top center-align-field">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
